# Database Configuration
# Note: VITE_ prefix is required for client-side access in Vite
VITE_DATABASE_URL=postgresql://username:password@hostname:5432/database
# Fallback (for server-side if needed)
DATABASE_URL=postgresql://username:password@hostname:5432/database

# JWT Configuration
# Note: VITE_ prefix is required for client-side access in Vite
VITE_JWT_SECRET=your-super-secret-jwt-key-here
# Fallback (for server-side if needed)
JWT_SECRET=your-super-secret-jwt-key-here

# Cloudflare R2 Storage Configuration
# Note: VITE_ prefix is required for client-side access in Vite
VITE_AWS_S3_BUCKET_NAME=your-r2-bucket-name
VITE_AWS_S3_API_URL=https://your-account-id.r2.cloudflarestorage.com
VITE_AWS_ACCESS_KEY_ID=your-r2-access-key-id
VITE_AWS_SECRET_ACCESS_KEY=your-r2-secret-access-key
VITE_R2_PUBLIC_URL=https://your-custom-domain.com
# Fallbacks (for server-side if needed)
AWS_S3_BUCKET_NAME=your-r2-bucket-name
AWS_S3_API_URL=https://your-account-id.r2.cloudflarestorage.com
AWS_ACCESS_KEY_ID=your-r2-access-key-id
AWS_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_PUBLIC_URL=https://your-custom-domain.com
